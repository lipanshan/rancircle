@import "../../common/font/font";

.container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 88rpx;
  left: 0;
  width: 100%;
  overflow: hidden;
}

.info-item {
  padding: 0 26rpx 30rpx;
  background-color: #343339;
}

.avatar-wrapper {
  display: -webkit-flex;
  display: flex;
}

.avatar-wrap {
  -webkit-flex: 1;
  flex: 1;
  display: -webkit-flex;
  display: flex;
}

.address {
  font-size: 24rpx;
  line-height: 40rpx;
  margin-top: 33rpx;
  color: rgba(255, 255, 255, 0.3);
  text-align: right;
}

.avatar-img {
  flex: 0 0 106rpx;
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-txt {
  -webkit-flex: 1;
  flex: 1;
  padding-left: 12rpx;
}

.name {
  display: block;
  font-size: 28rpx;
  line-height: 56rpx;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
}

.time {
  font-size: 20rpx;
  line-height: 32rpx;
  color: rgba(255, 255, 255, 0.3);
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.say-wrap, .subsay-wrap {
  margin-top: 23rpx;
  font-size: 30rpx;
  line-height: 36rpx;
  color: #fff;
}

.subsay-wrap {
  margin-top: 33rpx;
}

.sub-txt {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nowrap {
  white-space: nowrap;
  height: 36rpx;
}

.toggle-btn {
  padding: 0;
  padding-top: 12rpx;
  display: inline-block;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(225, 225, 225, 0.2);
  text-align: left;
  background-color: #343339;
}

.toggle-btn::after {
  border-color: transparent;
}

.image-list {
  position: relative;
  margin-top: 16rpx;
  margin-right: -12rpx;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}

.layout-flex {
  -webkit-flex: 1;
  flex: 1;
}

.layout-percent {
  -webkit-flex: 0 0 33.333%;
  flex: 0 0 33.333%;
  width: 33.333%;
}

.image-box {
  position: relative;
  margin-top: 12rpx;
  margin-right: 12rpx;
  padding-bottom: 100%;
  height: 0;
  overflow: hidden;
}

.show-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.bottom-wrap {
  margin-top: 50rpx;
  padding-bottom: 40rpx;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid rgba(0, 0, 0, 0.4);
}

.comment-wrap, .like-wrap {
  margin-right: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.more-wrap {
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
}

.comment-wrap, .like-wrap, .more-icon, .comment-icon, .like-icon {
  font-size: 32rpx;
  line-height: 52rpx;
  color: #928e8d;
}

.like-icon-active {
  color: #cb4b58;
}

.nowrap {
  height: 36rpx;
  white-space: nowrap;
}

.run-info {
  margin-top: 30rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  border: 1rpx solid #56555b;
}

.scale-image {
  flex: 0 0 120rpx;
  width: 120rpx;
  height: 120rpx;
}

.scale-image>image {
  display: block;
  width: 120rpx;
  height: 120rpx;
}

.run-intro {
  -webkit-flex: 1;
  flex: 1;
  font-size: 0;
}

.run-txt {
  margin-top: 22rpx;
  display: inline-block;
  vertical-align: top;
  padding-left: 30rpx;
  padding-right: 50rpx;
  text-align: left;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #fff;
}

.more {
  flex: 0 0 50rpx;
  width: 50rpx;
}

.more-world {
  font-size: 36rpx;
  line-height: 120rpx;
  color: #4f4e54;
}

.separate-line {
  height: 20rpx;
  background-color: #2a292f;
}

.favorate-list-wrap {
  padding: 30rpx 24rpx;
  background-color: #343339;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
}

.favorate-num {
  flex: 0 0 90rpx;
  width: 90rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  text-align: right;
  color: #fff;
}

.favorite-list {
  position: relative;
  flex: 1;
  -webkit-flex: 1;
  font-size: 0;
  padding-right: 44rpx;
  overflow: hidden;
}

.favorite-list-more {
  flex: 0 0 44rpx;
  display: block;
  width: 44rpx;
  height: 44rpx;
  font-size: 44rpx;
  line-height: 44rpx;
  background-color: #3b3a40;
  border-radius: 50%;
  overflow: hidden;
}

.favorite-wrap {
  padding-left: 20rpx;
  white-space: nowrap;
}

.favorite-img-wrap {
  display: inline-block;
  vertical-align: middle;
  padding-right: 20rpx;
}

.favorite-img-wrap > image {
  display: block;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}

.input-wrap {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #2a292f;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.separate-wrap {
  display: -webkit-flex;
  display: flex;
  padding-top: 15rpx;
  background-color: #343339;
  justify-content: center;
  align-items: center;
}

.comment-txt {
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 24rpx;
  line-height: 74rpx;
  color: rgba(255, 255, 255, 0.4);
}
.line {
  flex: 1;
  -webkit-flex: 1;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.4);
}
.input-group {
  display: -webkit-flex;
  display: flex;
  padding-left: 10rpx;
}
.input-group > input {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  background-color: #343339;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  height: 30rpx;
  padding: 20rpx 10rpx;
  min-height: auto;
}
.favorite-icon-wrap {
  flex: 0 0 79rpx;
  width: 79rpx;
  text-align: center;
}
.favorite-icon-wrap .icon-heart {
  font-size: 37rpx;
  line-height: 70rpx;
  color: #928e8d;
}
