/* pages/trainstep/trainstep.wxss */
.content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 98rpx;
  left: 0;
  overflow: hidden;
  background-color: #2a292f;
}
.section {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title {
  -webkit-flex: 1;
  flex: 1;
}
.p {
  display: block;
  font-size: 26rpx;
  line-height: 34rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
}
.select-wrap {
  -webkit-flex: 1;
  flex: 1;
}
.h1 {
  font-size: 32rpx;
  line-height: 72rpx;
  color: #fff;
  text-align: center;
}
.num {
  padding-top: 6rpx;
  font-size: 0;
  text-align: center;
}
.h2 {
  display: inline-block;
  vertical-align: bottom;
  font-size: 58rpx;
  line-height: 90rpx;
  font-weight: bold;
  color: #fff;
}
.unit {
  padding-left: 14rpx;
  display: inline-block;
  vertical-align: bottom;
  font-size: 22rpx;
  line-height: 54rpx;
  color: rgba(255, 255, 255, 0.6);
}
.next-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #6c9ce8;
  color: #fff;
}
.next-btn > text {
  display: block;
  font-size: 34rpx;
  line-height: 98rpx;
  text-align: center;
}
.select {
  margin: 0 auto;
  width: 440rpx;
  height: 44rpx;
  overflow: hidden;
  font-size: 0;
  white-space: nowrap;
  background: -webkit-repeating-linear-gradient(rgba(42, 41, 47, 1), rgba(42, 41, 47, 0) 50%, rgba(42, 41, 47, 1) 100%) #2a292f;
  border-radius: 44rpx;
}
.option {
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  display: inline-block;
  vertical-align: top;
}
.step {
  margin: 0 4rpx;
  display: inline-block;
  vertical-align: middle;
  border-left: 1rpx solid rgba(255,255, 255, 0.8);
  height: 6rpx;
}
.step-center {
  margin: 0 4rpx;
  display: inline-block;
  vertical-align: middle;
  border-left: 1rpx solid rgba(255, 255, 255, 0.8);
  height: 28rpx;
  transition: all linear 0.3s;
  -webkit-backface-visibility: hidden;
  -ms-backface-visiblity: hidden;
  -moz-backface-visiblity: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  perspective: 1000;

}
.step-center.true {
  transform: scale(1.571);
  transform-origin: center center;
}