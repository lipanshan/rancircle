/* pages/toptiodetail/topicdetail.wxss */
.header {
  position: relative;
  background-color: #343339;
  padding-top: 50%;
  padding-bottom: 16rpx;
}
.bg {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  height: 0;
  padding-bottom: 50%;
  overflow: hidden;
}
.bg-image {
  position: absolute;
  top: 0; 
  right: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.top-title {
  position: absolute;
  top: 50%;
  right: 0;
  left: 0;
  transform: translateY(-50%);
  z-index: 5;
}
.h1 {
  margin-top: 36rpx;
  font-size: 38rpx;
  line-height: 66rpx;
  color: #fff;
  font-weight: 600;
  text-align: center;
}
.hot-txt {
  font-size: 30rpx;
  line-height: 58rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.4);
}
.collapse-btn,
.intro,
.question-answer {
  margin: 0 30rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(255, 255, 255, 0.4);
}
.intro {
  margin-top: 13rpx;
}
.question-answer {
  position: relative;
  margin-top: 28rpx;
  padding-bottom: 40rpx;
}
.question {
  display: block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 40rpx;
}
.collapse {
  white-space: normal;
  height: auto;
}
.collapse-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  display: block;
  color: rgba(255, 255, 255, 0.4);
  padding: 0;
  background-color: transparent;
}
.collapse-btn::after {
  border-color: transparent;
}
.switch-tag {
  padding: 0 30rpx;
  padding-top: 6rpx;
  background-color: #343339;
}
.navigator-wrap {
  border-top: 1rpx solid #46454b;
  padding: 0 144rpx;
  display: flex;
  display: -webkit-flex;
}
.navigator-item {
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  font-size: 0;
}
.navigator-item > text {
  display: inline-block;
  vertical-align: top;
  font-size: 30rpx;
  line-height: 78rpx;
  border-bottom: 4rpx solid transparent;
  color: rgba(255, 255, 255, 0.4);
}
.navigator-item-active > text {
  border-color: #c9544b;
  color: rgba(255, 255, 255, 1);
}
.splite-line {
  height: 20rpx;
  background-color: #2a292f;
}
.list-wrap {
  background-color: #343339;
}
.list-item {
  display: none;
  width: 100%;
}
.show {
  display: block;
}