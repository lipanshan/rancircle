/* pages/train/train.wxss */
page {
}
.bg-image {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0; 
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.list {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
  background: none;
  z-index: 1000;
}
.item {
  margin: 0 30rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.8);
  padding-top: 36rpx;
  padding-bottom: 44rpx;
}
.icon-wrap {
  flex: 0 0 165rpx;
  width: 165rpx;
  padding-left: 30rpx;
  font-size: 80rpx;
  line-height: 98rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
}
.title {
  font-size: 38rpx;
  line-height: 60rpx;
  color: #fff;
}
.subtitle {
  font-size: 18rpx;
  line-height: 38rpx;
  color: #fff;
}