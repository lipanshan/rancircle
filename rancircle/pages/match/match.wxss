/* pages/fighting/fighting.wxss */
.list {
  height: 100%;
  overflow: hidden;
  background: #2a292f;
}
.image-wrap {
  position: relative;
  padding-bottom: 47.8%;
  height: 0;
  overflow: hidden;
}
.image-wrap > image {
  position: absolute;
  top: 0;
  left: 0; 
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.section {
  padding: 44rpx 30rpx 0;
}
.subtitle {
  font-size: 24rpx;
  line-height: 70rpx;
  color: rgba(255, 255, 255, 0.4);
}
.title {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.h1 {
  font-size: 36rpx;
  line-height: 56rpx;
  padding-top: 11rpx;
  color: #fff;
}
.num {
  display: block;
  font-size: 24rpx;
  line-height: 32rpx;
  color: rgba(255, 255, 255, 1);
}
