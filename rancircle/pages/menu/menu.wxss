/* pages/menu/menu.wxss */
.menu {
  padding-left: 16rpx;
  padding-right: 16rpx;
  height: 80rpx;
  background-color: #25262b;
  overflow: hidden;
}
.nav {
  position: relative;
  font-size: 0;
  white-space: nowrap;
}
.tag-item {
  margin-left: 16rpx;
  display: inline-block;
  padding: 0;
  width: 134rpx;
  color: rgba(255, 255, 255, 0.4);
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #25262b;
}
.tag-item::after {
  border-color: #25262b;
}
.active-tag-item {
  color: rgba(255, 255, 255, 1);
}
.active-line {
  position: absolute;
  top:76rpx;
  left: 0;
  width: 134rpx;
  height: 4rpx;
  background-color: #cb4c5d;
  transition: all 0.3s linear;
}
.content {
  position: absolute;
  top: 80rpx;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
}
.menu-content {
  white-space: nowrap;
  height: 100%;
  font-size: 0;
  
}
.menu-content-left {
  transition: all 0.3s linear;
  transform: translate3d(-100%, 0, 0);
}
.menu-content-init {
  transform: translate3d(-100%, 0, 0);
}
.menu-content-right{
  transition: all 0.3s linear;
  transform: translate3d(0, 0, 0);
}
.list {
  display: inline-block;
  vertical-align: top;
  white-space: normal;
  height: 100%;
  overflow: hidden;
}
.list-item {
  margin: 25rpx 25rpx 0;
  padding-bottom: 25rpx;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1rpx solid #cbcbcb;
}
.avatar-wrap {
  flex: 0 0 200rpx;
  width: 200rpx;
}
.avatar-box {
  position: relative;
  padding-bottom: 70%; 
  height: 0;
  overflow: hidden;
  background-color: #cbcbcb;
}
.list-item-img {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}
.cnt {
  position: relative;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 25rpx;
}
.ellipsis {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.title {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #0d0d0d;
  width: 100%;
}
.subtitle {
  margin-top: 11rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #9a9a9a;
  height: 97rpx;
  overflow: hidden;
}
.list-item-btn {
  position: absolute;
  right: 0;
  bottom: -18rpx;
  padding: 0 4rpx;
  color: #6b8cad;
  background-color: #fff;
  font-size: 22rpx;
  line-height: 28rpx;
  text-align: center;
   -webkit-border-radius: 2rpx;
  border-radius: 2rpx;
}
.list-item-btn::after {
  border-color: #6b8cad;
  -webkit-border-radius: 2rpx;
  border-radius: 2rpx;
}