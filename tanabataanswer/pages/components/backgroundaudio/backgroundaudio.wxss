/* pages/home/components/backgroundaudio/backgroundaudio.wxss */

.play-icon-wrap {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  z-index: 800;
}

@keyframes rotateIcon {
  0% {
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
    -moz-transform: rotate(360deg);
    -ms-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

.rotate-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 70rpx;
  height: 70rpx;
}

.playing,
.pause {
  display: block;
  width: 70rpx;
  height: 70rpx;
}

.playing {
  -wekbit-animation: rotateIcon 10s linear infinite;
  -moz-animation: rotateIcon 10s linear infinite;
  -ms-animation: rotateIcon 10s linear infinite;
  -o-animation: rotateIcon 10s linear infinite;
  animation: rotateIcon 10s linear infinite;
}