/* pages/home/home.wxss */

.content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
}

.h1 {
  flex: 0 0 100%;
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
}

.h1 > image {
  display: inline-block;
  width: 666rpx;
  height: 644rpx;
}

.btn-wrap {
  flex: 1;
}

@keyframes swing {
  0% {
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    -o-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }

  25% {
    -webkit-transform: translate3d(-30rpx, 0, 0);
    -moz-transform: translate3d(-30rpx, 0, 0);
    -ms-transform: translate3d(-30rpx, 0, 0);
    -o-transform: translate3d(-30rpx, 0, 0);
    transform: translate3d(-30rpx, 0, 0);
  }

  50% {
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    -o-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }

  75% {
    -webkit-transform: translate3d(30rpx, 0, 0);
    -moz-transform: translate3d(30rpx, 0, 0);
    -ms-transform: translate3d(30rpx, 0, 0);
    -o-transform: translate3d(30rpx, 0, 0);
    transform: translate3d(30rpx, 0, 0);
  }

  100% {
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    -o-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

.image-move {
  width: 240rpx;
  margin: 0 auto;
}

.image-move > image {
  display: block;
  width: 240rpx;
  height: 154rpx;
  -webkit-animation: swing 2s linear infinite;
  -moz-animation: swing 2s linear infinite;
  -ms-animation: swing 2s linear infinite;
  -o-animation: swing 2s linear infinite;
  animation: swing 2s linear infinite;
}
.section {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  display: -webkit-flex;
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  overflow: hidden;
}

