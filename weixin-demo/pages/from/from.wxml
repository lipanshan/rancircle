<!--pages/from/from.wxml-->
<text>form</text>
<form bind:submit="formSubmit" bind:reset="fromReset">
  <view class="row">
    <view class="title">switch</view>
    <switch name="switch1"></switch>
    <switch name="switch2"></switch>
    <switch name="switch3"></switch>
    <switch name="switch4"></switch>
  </view>
  <view class="row">
    <view class="title">slider</view>
    <slider name="slider" show-value/>
  </view>
  <view class="row">
    <view class="title">input</view>
    <input name="input" placeholder='请输入'/>
  </view>
  <view class="row">
    <view class="title">radio</view>
      <radio-group name="radioGroup">
        <label><radio value="radio1"></radio>radio1</label>
        <label><radio value="radio2"></radio>radio2</label>
      </radio-group>
  </view>
  <view class="row">
    <view class="title">checkbox</view>
      <checkbox-group name="checkboxGroup">
        <label><checkbox value="checkbox1"/>checkbox1</label>
        <label><checkbox value="checkbox2"/>checkbox2</label>
      </checkbox-group>
  </view>
  <view class="btn-area">
    <button formType="submit">submit</button>
    <button formType="reset">reset</button>
  </view>
</form>