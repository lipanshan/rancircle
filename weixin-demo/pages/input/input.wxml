<!--pages/input/input.wxml-->
<text>input</text>
<view class="section">
<input placeholder='这是一个可以自动聚焦的input' focus/>
</view>
<view class="section">
<input value="这是一个有默认vlue的input"/>
</view>
<view class="section">
<input type="text" placeholder='这个input的type=text'/>
</view>
<view class="section">
<input type="number" placeholder='这个input的type=number，数字输入键盘'/>
</view>
<view class="section">
<input type="idcard" placeholder='这个input的type=idcard，身份证输入键盘'/>
