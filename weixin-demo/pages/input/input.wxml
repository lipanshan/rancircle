<view class="section">
<input type="text" confirm-type="next" placeholder='这个input的confirm-type=next, 右下角按钮为下一个'/>
</view>
<view class="section">
<input type="text" confirm-type="go" placeholder='这个input的confirm-type=go, 右下角按钮为前往'/>
</view>
<view class="section">
<input type="text" confirm-type="done" placeholder='这个input的confirm-type=go, 右下角按钮为完成'/>
