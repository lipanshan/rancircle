/* pages/checkbox/checkbox.wxss */
.checkbox {
  position: relative;
  display: block;
  width: 80rpx;
  height: 80rpx;
  background-color: bisque;
}
.check-box {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 80rpx;
  height: 80rpx;
  background-color: aqua;
  overflow: hidden;
  opacity: 0;
}
.show-info {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background-color: black;
  border: 1px solid transparent;
}
.show-info.active {
  background-color: #fff;
  border-color: aqua;
}