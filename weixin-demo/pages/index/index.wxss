.section {
  margin-top: 10rpx;
  font-size: 40rpx;
  line-height: 120rpx;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
  border: 1px solid #e4ecf3;
  box-shadow: 5rpx 10rpx 2rpx 0  rgba(0, 36, 100, 0.3);
